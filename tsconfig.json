{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "@storybook-vue/nuxt": ["./packages/storybook-nuxt/src/index.ts"]

    }
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/playground",
    "**/storybook-static",
    "playgrounds/**/*",
    "**/clones",
    "**/docs",
    "./packages/**/playground",
    "./packages/storybook-nuxt-cli/**/*",
    "./packages/devtools/client",
    "./playgrounds/my-nuxt-ap"
  ]
}
